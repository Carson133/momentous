<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-black">Login</h3>
        <hr class="login-hr">
        <p class="subtitle has-text-black">Please login to proceed.</p>
        <div class="box">
          <figure class="logo">
            <img alt= "Momentous logo" src="https://user-images.githubusercontent.com/74746211/117521730-20fd6580-af64-11eb-9522-6c4a865877c4.png"
            width="196" height="128">
          </figure>
          <form id="login-form">
            <div class="field">
              <p class="control has-icons-left has-icons-right">
                  <input type="text" name="email" id="email-login" class="login-form-field" placeholder="email">
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
                <span class="icon is-small is-right">
                  <i class="fas fa-check"></i>
                </span>
              </p>
            </div>

            <div class="field">
              <p class="control has-icons-left">
               <input type="password" name="password" id="password-login" class="login-form-field" placeholder="password">
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </p>
            </div>
               <input type="submit" value="login" id="login-form-submit" class="button is-block is-info is-fullwidth">
          </form>
        </div>
        <p class="has-text-grey">
          <a href="/signup">Sign Up</a>
        </p>
      </div>
    </div>
  </div>
</section>

<script src='/js/login.js'></script>